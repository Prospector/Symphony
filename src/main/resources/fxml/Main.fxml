<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TabPane?>
<?import me.jamiemansfield.symphony.gui.control.WelcomeTab?>
<VBox prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.jamiemansfield.symphony.gui.SymphonyController">
    <MenuBar VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" text="Open Jar..." />
            <MenuItem mnemonicParsing="false" text="Close Jar" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Load Mappings..." />
            <MenuItem mnemonicParsing="false" text="Save Mappings" />
            <MenuItem mnemonicParsing="false" text="Save Mappings As..." />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Export Remapped Jar..." />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#onQuit" text="Quit" />
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" onAction="#openWelcomeTab" text="Open Welcome Tab" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="About Symphony" />
        </Menu>
    </MenuBar>
    <SplitPane dividerPositions="0.25, 0.75" VBox.vgrow="ALWAYS">
        <TitledPane collapsible="false" text="Classes">
            <ScrollPane>
                <AnchorPane />
            </ScrollPane>
        </TitledPane>
        <TabPane fx:id="tabs">
            <WelcomeTab/>
        </TabPane>
    </SplitPane>
</VBox>
